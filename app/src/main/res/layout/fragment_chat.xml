<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile icon at the top -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Logo"/>

    <!-- Title of the chat, centered in the layout -->
    <TextView
        android:id="@+id/chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financial Advisor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />

    <!-- RecyclerView for displaying the chat messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/profile_icon"
        android:layout_above="@+id/message_input_layout"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- Container for the message input and send button -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/message_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="4dp"
        android:hint="Type your message">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/chat_border">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/message_input"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Type your message"
                android:inputType="textCapSentences"
                android:textColorHint="@color/material_dynamic_neutral70" />

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_send"
                android:contentDescription="@string/send_message"

                />
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:id="@+id/navigation_placeholder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true">
        <!-- Navigation bar elements here -->
    </FrameLayout>

</RelativeLayout>
