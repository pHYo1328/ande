<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_chat"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-24dp"
        android:alpha="0.05"
        android:contentDescription="@string/chat_icon"
        android:src="@drawable/chat_icon" />
    <!-- RecyclerView for displaying the chat messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/message_input_layout"
        android:layout_below="@id/app_bar_layout"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- Container for the message input and send button -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/message_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/type_your_message">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_border"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/message_input"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/type_your_message"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:minHeight="48dp"
                android:scrollbars="vertical"
                android:textColorHint="@color/material_dynamic_neutral70" />

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/send_message"
                android:padding="12dp"
                android:src="@drawable/ic_send" />
        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:id="@+id/navigation_placeholder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true">
        <!-- Navigation bar elements here -->
    </FrameLayout>

</RelativeLayout>
