<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black">

            <ImageButton
                android:id="@+id/exit_selection_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:contentDescription="Exit"
                android:gravity="center_vertical"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_receipt"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ImageView for the Receipt -->
    <ImageView
        android:id="@+id/imageViewReceipt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/app_bar_layout"
        android:layout_marginVertical="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <!-- TableLayout for Items -->
    <ScrollView
        android:id="@+id/scrollViewItems"
        android:layout_width="wrap_content"
        android:layout_below="@id/imageViewReceipt"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLayoutItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:stretchColumns="*">


            <!-- Table Headers -->
            <TableRow
                android:background="?android:attr/listDivider"
                android:padding="8dp">

                <TextView
                    android:padding="8dp"
                    android:text="Product" />

                <TextView
                    android:padding="8dp"
                    android:text="Amount" />

                <TextView
                    android:padding="8dp"
                    android:text="Quantity" />

                <TextView
                    android:padding="8dp"
                    android:text="Total" />

                <TextView
                    android:padding="8dp"
                    android:text="Action" />
            </TableRow>


        </TableLayout>
    </ScrollView>

    <!-- Add to Expenses Button -->
    <Button
        android:id="@+id/buttonAddToExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollViewItems"
        android:layout_marginTop="16dp"
        android:text="Add to expenses" />

</RelativeLayout>
