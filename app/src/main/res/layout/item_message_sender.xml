<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/message_background"
    android:padding="8dp">

    <TextView
        android:id="@+id/timestamp_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:layout_gravity="end"
        android:text="9:00 PM"
        android:layout_marginEnd="16dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:background="@drawable/chat_border"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/text_message_body_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/white"
            android:text="This is a sent message"
            android:background="@color/budget_purple"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
